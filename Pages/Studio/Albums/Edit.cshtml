@page
@model MusicLibrary.Pages.Studio.Albums.EditModel
@{
}
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Album</h1>

<div class="styled-form row py-3">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" />
            <input type="hidden" />
            <div class="form-group">
                <label for="albumName" class="control-label text-white">Name</label>
                <input type="text" id="albumName" name="albumName" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="createDate" class="control-label text-white">Create Date</label>
                <input type="text" id="createDate" name="createDate" placeholder="3/30/2022" class="form-control" readonly />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="genre" class="control-label text-white">Genre</label>
                <input type="text" id="genre" name="genre" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="albumArtist" class="control-label text-white">Artist</label>
                <input type="text" id="albumArtist" name="albumArtist" placeholder="Temp Artist" class="form-control" readonly />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="songNum" class="control-label text-white">Number of Songs</label>
                <input type="text" id="songNum" name="songNum" placeholder="4" class="form-control" readonly />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary upload" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">
        <img class="invert-icon" src="~/images/icons8-back-arrow-64.png" width="40px" height="40px" />
    </a>
</div>
