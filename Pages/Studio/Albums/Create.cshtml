@page
@model MusicLibrary.Pages.Studio.Albums.CreateModel
@{
}

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Album</h1>

<div class="styled-form row py-3">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label text-white">Name</label>
                <input class="form-control" placeholder="Album Name" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label text-white">Song</label>
                <input type="search" id="searchFile" name="searchFile" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary upload" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">
        <img class="invert-icon" src="~/images/icons8-back-arrow-64.png" width="40px" height="40px" />
    </a>
</div>