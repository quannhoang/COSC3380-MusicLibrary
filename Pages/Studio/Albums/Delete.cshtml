@page
@model MusicLibrary.Pages.Studio.Albums.DeleteModel
@{
}

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Album</h1>

<h3>Are you sure you want to delete this album?</h3>
<div class="styled-form row py-3">
    <dl class="row">
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.album.AlbumName)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.album.AlbumName)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.album.CreateDate)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.album.CreateDate)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.album.ArtistName)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.album.ArtistName)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.album.SongCount)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.album.SongCount)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="album.AlbumID"/>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
<div>
    <a asp-page="./Index">Back to Albums</a>
</div>
