@page
@model MusicLibrary.Pages.Studio.Albums.PlayAlbumModel
@{
}

@{
    ViewData["Title"] = "Play";
}

<h1>Album: First Album</h1>

<div class="d-flex gap-3 justify-content-around flex-column flex-lg-row align-items-center align-items-lg-stretch">
    <div class="audio-player-card">
        <audio style="width: 100%;"
               id="player"
               controls
               src="">
        </audio>
        <div class="d-flex justify-content-between">
            <a asp-page="./Play" class="logo-svg hover-btn hover-left"><img style="transform: scaleX(-100%);" src="~/images/arrow.png" /></a>
            <a asp-page="./Play" class="logo-svg hover-btn hover-right"><img src="~/images/arrow.png" /></a>
        </div>

        <dl>
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                First Song
            </dd>
            <dt class="col-sm-2">
                Upload Date
            </dt>
            <dd class="col-sm-10">
                03/30/2022
            </dd>
            <dt class="col-sm-2">
                Genre
            </dt>
            <dd class="col-sm-10">
                Soul
            </dd>
            <dt class="col-sm-2">
                Artist
            </dt>
            <dd class="col-sm-10">
                Temp Artist
            </dd>
            <dt class="col-sm-2">
                Length
            </dt>
            <dd class="col-sm-10">
                00:03:52
            </dd>
        </dl>
    </div>

    <div class="table-container">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Upload Date
                    </th>
                    <th>
                        Genre
                    </th>
                    <th>
                        Artist
                    </th>
                    <th>
                        Length
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        First Song
                    </td>
                    <td>
                        03/30/2022
                    </td>
                    <td>
                        Soul
                    </td>
                    <td>
                        Temp Artist
                    </td>
                    <td>
                        00:03:52
                    </td>
                    <td>
                        <a asp-page="./Play">Play</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-page="./Edit">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>

    <script>window.onload = function () {
            document.getElementById("player").play();
        }</script>
</div>