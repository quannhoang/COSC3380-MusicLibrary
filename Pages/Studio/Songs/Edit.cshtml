@page
@model MusicLibrary.Pages.Studio.Songs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Song</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Song.SongID" />
            <input type="hidden" asp-for="Song.FileName" />
            <div class="form-group">
                <label asp-for="Song.Name" class="control-label"></label>
                <input asp-for="Song.Name" class="form-control" />
                <span asp-validation-for="Song.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.UploadDate" class="control-label"></label>
                <input asp-for="Song.UploadDate" class="form-control" readonly/>
                <span asp-validation-for="Song.UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Genre" class="control-label"></label>
                <input asp-for="Song.Genre" class="form-control" />
                <span asp-validation-for="Song.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Artist" class="control-label"></label>
                <input asp-for="Song.Artist" class="form-control" readonly/>
                <span asp-validation-for="Song.Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Length" class="control-label"></label>
                <input asp-for="Song.Length" class="form-control" readonly/>
                <span asp-validation-for="Song.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
