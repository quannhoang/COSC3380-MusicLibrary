@page 
@model MusicLibrary.Pages.Studio.Songs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Your Songs</h1>

<p>
    <a asp-page="Upload" class="btn btn-primary">Upload Song</a>
</p>
<form>
    <p>
        <select asp-for="searchGenre" asp-items="Model.Genres">
            <option value ="">All</option>
        </select>
        Name: <input type="text" asp-for="searchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].UploadDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].Length)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Songs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SongID" class="btn btn-toolbar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                    Edit
                </a> |
                <a asp-page="./PlaySong" asp-route-id="@item.SongID">PlaySong</a> |
                <a asp-page="./Delete" asp-route-id="@item.SongID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
