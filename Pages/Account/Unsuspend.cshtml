@page
@model MusicLibrary.Pages.Account.UnsuspendModel
@{
    ViewData["Title"] = "Unsuspend";
}

<h1>Suspend User Account</h1>

<h3>Are you sure you want to unsuspend this user?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentUser.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentUser.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentUser.CreateDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CurrentUser.UserID" />
        <input type="submit" value="Unsuspend" class="btn btn-success" /> |
        <a asp-page="./Manage">Back to Manage Page</a>
    </form>
</div>